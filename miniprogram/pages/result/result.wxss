/* pages/result/result.wxss */
.container {
  padding: 24rpx;
}
.card {
  padding: 32rpx;
}
.header {
  text-align: center;
  margin-bottom: 40rpx;
}
.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
}
.result-list {
  border-top: 2rpx solid #f3f4f6;
}
.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 2rpx solid #f3f4f6;
}
.result-item-name {
  font-size: 30rpx;
  color: #374151;
}
.result-item-score {
  font-size: 32rpx;
  font-weight: bold;
  color: #4f46e5;
}
.total-score-wrapper {
  margin-top: 48rpx;
  padding: 32rpx;
  background-color: #eef2ff; /* indigo-50 */
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.total-score-label {
  font-size: 36rpx;
  font-weight: bold;
  color: #374151;
}
.total-score-value {
  font-size: 56rpx;
  font-weight: 800;
  color: #4f46e5;
}
.form-group {
  margin-top: 48rpx;
}
.form-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}
.comment-box {
  width: 100%;
  padding: 24rpx;
  background-color: #f9fafb; /* gray-50 */
  border-radius: 12rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #374151;
  min-height: 120rpx;
  line-height: 1.6;
}
.signature-image {
  width: 100%;
  height: 300rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  background-color: #f9fafb;
}
.empty-state {
  text-align: center;
  padding-top: 200rpx;
  color: #9ca3af;
}
.empty-icon {
  width: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.7;
}