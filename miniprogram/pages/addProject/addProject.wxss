.container {
  padding: 24rpx;
  background-color: #f3f4f6;
  padding-bottom: 180rpx; /* 为底部的保存按钮留出足够空间 */
}
.form-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.form-group {
  margin-bottom: 48rpx;
}
.form-group:last-child {
  margin-bottom: 0;
}
.form-label {
  font-size: 30rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
  display: block;
}

/* --- 关键修改开始 --- */
.form-input {
  width: 100%;
  height: 112rpx; /* 将高度从 96rpx 调大到 112rpx */
  border: 2rpx solid #d1d5db;
  border-radius: 16rpx;
  padding: 0 32rpx; /* 相应地微调水平内边距 */
  box-sizing: border-box;
  font-size: 30rpx; /* 也可以适当调大字体 */
  /* 通过 line-height 等于 height 来垂直居中 placeholder 和输入内容 */
  line-height: 112rpx; 
}
/* --- 关键修改结束 --- */

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
}
.save-btn {
  position: fixed; /* 固定在底部，防止被键盘遮挡 */
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
  width: auto; /* 宽度自适应 */
  background-color: #10b981;
  color: white;
  border-radius: 24rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

/* Criterion Card Styles */
.criterion-card {
  background-color: #f9fafb;
  border: 1px solid #e5e7eb;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}
.sub-input {
  margin-bottom: 16rpx;
}
.sub-textarea {
  margin-bottom: 16rpx;
}
.add-criterion-btn {
  width: 100%;
  margin-top: 16rpx;
  background-color: #e5e7eb;
  color: #374151;
  border: none;
}
.delete-criterion-btn {
  display: block;
  margin-left: auto;
  background-color: #fee2e2;
  color: #b91c1c;
  border: none;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
}