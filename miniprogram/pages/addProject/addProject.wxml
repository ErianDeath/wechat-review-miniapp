<view class="container">
  <view class="form-card">
    <view class="form-group">
        <view class="form-label">项目名称</view>
        <input class="form-input" value="{{project.projectName}}" data-field="projectName" bindinput="onInputChange" placeholder="请输入项目名称" />
    </view>
    <view class="form-group">
        <view class="form-label">项目负责人</view>
        <input class="form-input" value="{{project.owner}}" data-field="owner" bindinput="onInputChange" placeholder="请输入负责人姓名" />
    </view>
    <view class="form-group">
        <view class="form-label">项目描述</view>
        <textarea class="form-textarea" value="{{project.description}}" data-field="description" bindinput="onInputChange" placeholder="请输入项目详细描述" />
    </view>
  </view>

  <view class="form-card">
    <view class="form-group">
        <view class="form-label">评分标准细则</view>
        <view wx:for="{{project.criteria}}" wx:for-item="criterion" wx:key="index" class="criterion-card">
             <input class="form-input sub-input" value="{{criterion.name}}" placeholder="标准名称 (如: 创新性)" bindinput="onCriterionChange" data-index="{{index}}" data-field="name"/>
             <input class="form-input sub-input" type="number" value="{{criterion.maxScore}}" placeholder="最高分 (如: 30)" bindinput="onCriterionChange" data-index="{{index}}" data-field="maxScore"/>
             <textarea class="form-textarea sub-textarea" value="{{criterion.description}}" placeholder="评分说明" bindinput="onCriterionChange" data-index="{{index}}" data-field="description"/>
             <button class="delete-criterion-btn" size="mini" bindtap="removeCriterion" data-index="{{index}}">删除此项</button>
        </view>
        <button class="add-criterion-btn" bindtap="addCriterion">+ 添加评分项</button>
    </view>
  </view>

  <button class="save-btn" bind:tap="handleSave">创建项目</button>
</view>