.container { display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; padding: 0 40rpx; box-sizing: border-box; background-color: #f3f4f6; }
.avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
}
.title { font-size: 48rpx; font-weight: bold; }
.subtitle { font-size: 28rpx; color: #888; margin-top: 16rpx; margin-bottom: 80rpx; }
.login-btn { background-color: #4f46e5; color: white; width: 80%; }

.modal-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0, 0, 0, 0.6); display: flex; justify-content: center; align-items: center; z-index: 1000; }
.modal-content { width: 80%; background-color: white; border-radius: 24rpx; padding: 48rpx; box-sizing: border-box; }
.modal-title { font-size: 36rpx; font-weight: bold; text-align: center; margin-bottom: 40rpx; }
.modal-input { border: 1px solid #e5e7eb; border-radius: 16rpx; padding: 20rpx; font-size: 28rpx; margin-bottom: 48rpx; }
.modal-actions { display: flex; justify-content: space-between; gap: 24rpx; }
.action-btn { flex: 1; font-size: 28rpx; }
.action-btn.decline { background-color: #f3f4f6; color: #4b5563; }
.action-btn.confirm { background-color: #10b981; color: white; }