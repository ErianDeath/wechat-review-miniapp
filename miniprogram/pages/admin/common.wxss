.container { padding: 32rpx; background-color: #f3f4f6; min-height: 100vh; box-sizing: border-box;}
.item-card { display: flex; align-items: center; justify-content: space-between; background: #fff; padding: 32rpx; border-radius: 16rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05); }
.item-content { flex: 1; margin-right: 20rpx; }
.item-title { font-size: 32rpx; font-weight: 600; color: #1f2937; }
.item-actions { display: flex; gap: 20rpx; }
.action-btn { margin: 0 !important; }
.action-btn.warn { background-color: #ef4444; color: white; }
.add-btn { width: 100%; background-color: #4f46e5; color: white; margin-top: 40rpx; }
.empty-state { text-align: center; color: #9ca3af; padding: 100rpx 0; }
.tag-active { background: #10b981; color: white; font-size: 20rpx; padding: 4rpx 12rpx; border-radius: 8rpx; display: inline-block; margin-top: 8rpx; }

/* Form Styles */
.form-container { background-color: #fff; border-radius: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08); }
.form-group { margin-bottom: 40rpx; }
.form-label { font-size: 30rpx; font-weight: 600; color: #374151; margin-bottom: 16rpx; display: block; }
.form-input, .form-textarea { width: 100%; border: 2rpx solid #d1d5db; border-radius: 12rpx; padding: 20rpx; box-sizing: border-box; font-size: 28rpx; }
.form-textarea { height: 200rpx; }
.save-btn { width: 100%; background-color: #10b981; color: white; }

/* Criterion Card Styles */
.criterion-card { background-color: #f9fafb; border: 1px solid #e5e7eb; border-radius: 12rpx; padding: 24rpx; margin-bottom: 24rpx; }
.sub-input, .sub-textarea { margin-bottom: 16rpx; }
.add-criterion-btn { margin-top: 16rpx; background-color: #e5e7eb; color: #374151; }
.delete-criterion-btn { margin-top: 16rpx; font-size: 24rpx; background-color: #fee2e2; color: #ef4444; }