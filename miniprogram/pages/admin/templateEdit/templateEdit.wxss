@import "../common.wxss";
.criterion-card {
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 12rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
}
.sub-input, .sub-textarea {
    margin-bottom: 16rpx;
}
.add-criterion-btn {
    width: 100%;
    margin-top: 16rpx;
    background-color: #e5e7eb;
    color: #374151;
}
.delete-criterion-btn {
    display: block;
    margin-left: auto;
    background-color: #fee2e2;
    color: #b91c1c;
    border: none;
}