/* pages/signatureTest/signatureTest.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  color: #333;
}

.signature-canvas {
  width: 100%;
  height: 600rpx; /* 给予足够的签名空间 */
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.button-group {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn {
  width: 30%;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.btn.clear {
  background-color: #ef4444; /* red-500 */
}

.btn.undo {
  background-color: #f59e0b; /* amber-500 */
}

.btn.submit {
  background-color: #10b981; /* emerald-500 */
}